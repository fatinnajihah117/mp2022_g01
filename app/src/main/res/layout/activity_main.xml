<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/purplegradient"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="140dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ltop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="200dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/hotellogobaru"></ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ltop"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/lpart1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="81dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/momcakebold"
                        android:text="LOGIN"
                        android:textSize="35dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lpart2"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpart1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/momcakebold"
                        android:text="Enter your email :"
                        android:textSize="24dp"
                        android:textStyle="bold"></TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFCEBAED"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/etName"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Email"
                                android:inputType="textEmailAddress" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lpart3"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpart2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/momcakebold"
                        android:text="Enter your Password :"
                        android:textSize="24dp"
                        android:textStyle="bold"></TextView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="40dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFCEBAED"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/etPassword"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="Password"
                                android:inputType="textPassword" />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lpart4"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpart3"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:id="@+id/tvForgotPassword"
                        android:fontFamily="@font/momcakebold"
                        android:layout_gravity="center"
                        android:text="Forgot password?"
                        android:textSize="20dp"
                        android:textStyle="normal"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/lpart5"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lpart4"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:text="LOGIN"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#7C668C"></Button>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:id="@+id/tvInfo"
                        android:fontFamily="@font/momcakebold"
                        android:layout_gravity="center"
                        android:text="No of Incorrect Attempts:"
                        android:textSize="16dp"
                        android:textStyle="normal"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lpart6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lpart5"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvRegistration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="40dp"
                        android:fontFamily="@font/momcakebold"
                        android:text="New User? Sign up"
                        android:textColor="#7C668C"
                        android:textSize="20dp"
                        ></TextView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>

</RelativeLayout>