<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="#E6D3EC">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#E6D3EC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/relaxhotell"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="189dp"
                        android:layout_height="189dp"
                        android:src="@drawable/welcomesign" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="210dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    //button room type
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="130dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/roompic">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="130dp"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="150dp"
                                    android:layout_height="130dp"
                                    android:backgroundTint="@color/white"
                                    app:cardCornerRadius="20dp">

                                    <ImageView
                                        android:id="@+id/bed"
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:layout_centerInParent="true"
                                        android:layout_marginLeft="46dp"
                                        android:layout_marginTop="35dp"
                                        android:src="@drawable/bedicon"
                                        app:tint="#6C5681" />

                                    <TextView
                                        android:id="@+id/txtbed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="90dp"
                                        android:fontFamily="@font/momcakebold"
                                        android:text="ROOM TYPE"
                                        android:textColor="#6C5681"
                                        android:textSize="19sp"
                                        android:textStyle="bold"></TextView>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <Button
                                android:id="@+id/btnbed"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    //button book a room

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"

                        android:layout_weight="1"
                        app:cardCornerRadius="28dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="141dp">

                            <ImageView
                                android:id="@+id/bookroom"
                                android:layout_width="78dp"
                                android:layout_height="78dp"
                                android:layout_marginLeft="40dp"
                                android:layout_marginTop="18dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/bookingicon"
                                app:tint="#6C5681" />

                            <TextView
                                android:id="@+id/txtbookroom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/bookroom"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/momcakebold"
                                android:text="BOOK A ROOM"
                                android:textColor="#6C5681"
                                android:textSize="19sp"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btnbookroom"
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:background="@android:color/transparent"></Button>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    //button view receipt

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"

                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="28dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="141dp">

                            <ImageView
                                android:id="@+id/receipt"
                                android:layout_width="78dp"
                                android:layout_height="78dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="49dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="19dp"
                                android:layout_marginEnd="48dp"
                                android:src="@drawable/invoiceicon"
                                app:tint="#6C5681" />

                            <TextView
                                android:id="@+id/txtreceipt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/receipt"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="6dp"
                                android:fontFamily="@font/momcakebold"
                                android:text="RECEIPT"
                                android:textColor="#6C5681"
                                android:textSize="19sp"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btnreceipt"
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:background="@android:color/transparent"></Button>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:orientation="horizontal">

                    //button profile

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"

                        android:layout_weight="1"
                        app:cardCornerRadius="28dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="141dp">

                            <ImageView
                                android:id="@+id/profile"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_marginLeft="42dp"
                                android:layout_marginTop="20dp"
                                android:src="@drawable/profileicon"
                                app:tint="#6C5681" />

                            <TextView
                                android:id="@+id/txtprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/profile"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/momcakebold"
                                android:text="PROFILE"
                                android:textColor="#6C5681"
                                android:textSize="19sp"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btnprofile"
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:background="@android:color/transparent"></Button>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    //button contact us

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"

                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="28dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="141dp">

                            <ImageView
                                android:id="@+id/contact"
                                android:layout_width="78dp"
                                android:layout_height="78dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                android:layout_marginStart="49dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginEnd="48dp"
                                android:src="@drawable/contactus"
                                app:tint="#6C5681" />

                            <TextView
                                android:id="@+id/txtcontact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/contact"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/momcakebold"
                                android:text="CONTACT US"
                                android:textColor="#6C5681"
                                android:textSize="19sp"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btncontactus"
                                android:layout_width="200dp"
                                android:layout_height="130dp"
                                android:background="@android:color/transparent"></Button>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    //button LOGOUT

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="209dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <TextView
                                android:id="@+id/txtlogoutt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/momcakebold"
                                android:text="LOGOUT"
                                android:textColor="#6C5681"
                                android:textSize="19sp"
                                android:textStyle="bold"></TextView>

                            <Button
                                android:id="@+id/btnLogout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"></Button>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>